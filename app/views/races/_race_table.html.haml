%table.race
  %thead
    %tr
      - ["Name", "Date", "Address"].each do |th|
        %th= th
      - if current_user
        %th
  %tbody
    - races.each do |race|
      %tr
        %td= link_to(race.title, race.url, target: "_blank")
        %td= link_to(race.date.to_date, race.url, target: "_blank")
        %td= link_to(race.full_address, race.url, target: "_blank")
        %td= link_to("Edit Race", edit_admin_race_path(race)) if current_user
